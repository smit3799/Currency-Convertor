import tkinter as tk
from tkinter import  *


def currency_conversion(from_convert, to_convert,amount):
    exchange_rate = {
        "USD": {"INR": 83.2, "EUR": 0.9, "GBP": 0.78},
        "INR": {"USD": 0.012, "EUR": 0.011, "GBP": 0.0095},
        "EUR": {"USD": 1.1, "INR": 90.5, "GBP": 0.86},
        "GBP": {"USD": 1.27, "INR": 105.0, "EUR": 1.17}
    } # This is called nested Dictionary means Dictionary inside another Dictionary
    if from_convert not in exchange_rate:   # This condition will check that the key is inside the dictionary or not!!
        raise KeyError(f"Invalid source currency: {from_convert}")
    if to_convert not in exchange_rate[from_convert]:  # This condition will check that the target currency exists inside the nested dictionary for selected source currency
        raise KeyError(f"Invalid target currency: {to_convert}")

    converted_amount = amount* exchange_rate[from_convert][to_convert]  # Take the amount in from_convert dict and convert into the to_convert amount

    return converted_amount
